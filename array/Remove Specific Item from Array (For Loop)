<!DOCTYPE html>
<html>
<head>
    <title>Remove Item from Array Using For Loop</title>
    </head>
    <body>
    <h2>Remove Specific Item from Array (For Loop)</h2>

    <form id="arrayForm">
        <label for="arrayInput">Enter array elements (comma separated):</label><br>
        <input type="text" id="arrayInput" placeholder="e.g., 1,2,3,4,5" required><br><br>

        <label for="removeNumber">Enter number to remove:</label><br>
        <input type="number" id="removeNumber" required><br><br>

        <button type="submit">Remove Item</button>
    </form>

    <p id="output"></p>

    <script>
        function removeItemFromArray(array, n) {
        const newArray = [];
        for (let i = 0; i < array.length; i++) {
            if (array[i] !== n) {
            newArray.push(array[i]);
            }
        }
        return newArray;
        }

        document.getElementById("arrayForm").addEventListener("submit", function(event) {
        event.preventDefault();

        const arrayStr = document.getElementById("arrayInput").value;
        const removeNum = parseInt(document.getElementById("removeNumber").value);

        const array = arrayStr.split(',').map(num => parseInt(num.trim()));

        const newArray = removeItemFromArray(array, removeNum);

        document.getElementById("output").innerHTML =
            "Updated Array: [" + newArray.join(", ") + "]";
        });
    </script>
</body>
</html>
