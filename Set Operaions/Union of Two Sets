<!DOCTYPE html>
<html>
<head>
    <title>Union of Sets</title>
</head>
<body>
    <h2>Union of Two Sets</h2>

    <form id="unionForm">
        <label for="setAInput">Enter elements of Set A (comma separated):</label><br>
        <input type="text" id="setAInput" placeholder="e.g., apple,mango,orange" required><br><br>

        <label for="setBInput">Enter elements of Set B (comma separated):</label><br>
        <input type="text" id="setBInput" placeholder="e.g., grapes,apple,banana" required><br><br>

        <button type="submit">Perform Union</button>
    </form>

    <p id="output"></p>

    <script>
        function union(a, b) {
        let unionSet = new Set(a);
        for (let i of b) {
            unionSet.add(i);
        }
        return unionSet;
        }

        document.getElementById("unionForm").addEventListener("submit", function(event) {
        event.preventDefault();

        const setA = document.getElementById("setAInput").value.split(',').map(item => item.trim());
        const setB = document.getElementById("setBInput").value.split(',').map(item => item.trim());

        const resultSet = union(setA, setB);

        document.getElementById("output").textContent = "Union of Set A and Set B: [" + Array.from(resultSet).join(", ") + "]";
        });
    </script>
</body>
</html>
